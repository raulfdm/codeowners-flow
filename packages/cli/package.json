{
  "name": "@codeowners-flow/cli",
  "version": "0.2.0",
  "description": "A tool to script and manage the CODEOWNERS file programmatically",
  "bin": {
    "codeowners-flow": "./bin/index.js"
  },
  "keywords": [
    "codeowners",
    "github",
    "git",
    "azure",
    "bitbucket"
  ],
  "author": "Raul Melo <contact@raulmelo.me>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "bin",
    "README.md",
    "index.d.ts",
    "config.d.ts",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./config": {
      "types": "./config.d.ts",
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    }
  },
  "scripts": {
    "prepare": "turbo build --filter @codeowners-flow/cli --output-logs errors-only",
    "prepack": "turbo build --filter @codeowners-flow/cli --output-logs errors-only",
    "build": "vite build",
    "dev": "bun src/index.ts",
    "lint": "eslint src",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@manypkg/find-root": "2.2.3",
    "cosmiconfig": "9.0.0",
    "meow": "13.2.0",
    "zod": "3.24.2",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@codeowners-flow/eslint": "workspace:*",
    "@codeowners-flow/tsconfig": "workspace:*",
    "@types/node": "22.14.0",
    "@vitest/coverage-v8": "3.1.1",
    "ajv": "8.17.1",
    "eslint": "9.24.0",
    "typescript": "5.8.3",
    "vite": "6.2.5",
    "vite-plugin-dts": "4.5.3",
    "vitest": "3.1.1"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
