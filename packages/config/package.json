{
  "name": "@codeowners-js/config",
  "private": true,
  "version": "0.0.1",
  "description": "A CLI to manage CODEOWNERS file",
  "keywords": [
    "codeowners",
    "github",
    "git"
  ],
  "author": "Raul Melo <contact@raulmelo.me>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/src/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "prepare": "pnpm turbo build --filter config --output-logs errors-only",
    "build": "vite build",
    "dev": "tsx src/cli.ts",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cosmiconfig": "8.2.0",
    "zod": "3.21.4",
    "zod-validation-error": "1.3.1"
  },
  "devDependencies": {
    "@codeowners-js/eslint": "workspace:*",
    "@codeowners-js/tsconfig": "workspace:*",
    "@types/node": "16",
    "eslint": "8.47.0",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "vite": "4.4.8",
    "vite-plugin-dts": "3.5.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
